{
	"name": "run-debug-protractor-tests",
	"displayName": "Run/Debug Protractor tests",
	"description": "An extension that allows running and debugging protractor tests both individually and collectively.",
	"version": "1.0.1",
	"engines": {
		"vscode": "^1.50.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:typescript",
		"onLanguage:javascript"
	],
	"main": "./out/extension.js",
	"publisher": "osama-a-rehman",
	"contributes": {
		"configuration": {
			"title": "Run/Debug Protractor Config Paths",
			"properties": {
				"protractor.path": {
					"type": "string",
					"default": "",
					"description": "Path to protractor executable file for tests execution."
				},
				"protractor.config.path": {
					"type": "string",
					"default": "",
					"description": "Path to protractor configuration file to use for tests execution."
				}
			}
		}
	},
	"homepage": "https://github.com/osama-a-rehman/run-debug-protractor-vscode-ext",
	"repository": {
		"type": "git",
		"url": "https://github.com/osama-a-rehman/run-debug-protractor-vscode-ext.git"
	},
	"galleryBanner": {
		"color": "#313131",
		"theme": "dark"
	},
	"license": "MIT",
	"icon": "protractor.ico",
	"keywords": [
		"protractor",
		"test",
		"tests",
		"debug",
		"run"
	],
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.50.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	}
}
